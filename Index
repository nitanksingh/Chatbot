<body>
    <div class="container">
        <h1>üå∏ Tanisha's Magical Chat Experience üíñ</h1>
        <div id="chat">
            <div class="chat-entry bot">Hello Tanisha! üå∑ I'm your magical chatbot, created with love just for you. üíï Ask me anything, or share your thoughts! üòä</div>
        </div>
        <input type="text" id="userInput" placeholder="Type your magical message here..." />
        <button onclick="sendMessage()">‚ú® Send ‚ú®</button>
        <div class="heart">‚ù§Ô∏è</div>
    </div>

    <script>
        function sendMessage() {
            const input = document.getElementById('userInput');
            const message = input.value.trim();
            if (message === '') return;

            const chatDiv = document.getElementById('chat');

            const userEntry = document.createElement('div');
            userEntry.className = 'chat-entry user';
            userEntry.textContent = message;
            chatDiv.appendChild(userEntry);

            input.value = '';
            chatDiv.scrollTop = chatDiv.scrollHeight;

            setTimeout(() => {
                const botReply = document.createElement('div');
                botReply.className = 'chat-entry bot';
                botReply.textContent = getBotResponse(message);
                chatDiv.appendChild(botReply);
                chatDiv.scrollTop = chatDiv.scrollHeight;
            }, 1000);
        }

        function getBotResponse(input) {
            const lowercaseInput = input.toLowerCase();

            if (lowercaseInput.includes('how are you')) {
                return "I'm feeling magical because I'm talking to you, Tanisha! üåü";
            } else if (lowercaseInput.includes('love')) {
                return "My love for you is as vast as the stars, infinite and beautiful. üåå‚ù§Ô∏è";
            } else if (lowercaseInput.includes('hi') || lowercaseInput.includes('hello')) {
                return "Hello beautiful Tanisha! üå∏ Your presence makes everything shine brighter! ‚ú®";
            } else if (lowercaseInput.includes('bye')) {
                return "Farewell for now, but my heart will always beat for you. üåπ";
            } else if (lowercaseInput.includes('thank')) {
                return "You're welcome, Tanisha! Your happiness is my ultimate goal. üåà";
            } else {
                return "That's enchanting, Tanisha! Please tell me more... üå∑";
            }
        }
    </script>
